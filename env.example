# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# Supabase Configuration
SUPABASE_URL=your_supabase_project_url
SUPABASE_ANON_KEY=your_supabase_anon_key

# GitHub Configuration
GITHUB_TOKEN=your_github_personal_access_token

# Bot Configuration
POLLING_INTERVAL_MINUTES=5
MAX_REPOS_PER_CHAT=50

# Optional: Restrict bot to specific chat IDs (comma-separated)
ALLOWED_CHAT_IDS=

# Development
NODE_ENV=development

# Webhook Configuration (optional - if not set, uses polling mode)
WEBHOOK_URL=https://your-domain.com/webhook
WEBHOOK_PORT=3000
WEBHOOK_SECRET=your_webhook_secret_here

# External Cron Configuration (optional - if set, disables internal cron)
EXTERNAL_CRON_ENABLED=false
CRON_API_KEY=your_secure_cron_api_key_here
